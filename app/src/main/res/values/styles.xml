<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme3" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextStyle">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textAppearance">@font/montserrat</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="MyAppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- you should set typeface which you want to override with TypefaceUtil -->
        <item name="android:typeface">@font/montserrat</item>
    </style>


    <style name="AppTheme3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="colorGray">#DA575555</color>
</resources>
